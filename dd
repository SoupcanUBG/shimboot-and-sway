#!/bin/bash

DEVICE=""
USE_TOBY=false
BOARD=""

for arg in "$@"; do
    case "$arg" in
        -/*) DEVICE="${arg#-}" ;;
        --toby) USE_TOBY=true ;;
        ---*) BOARD="${arg#---}" ;;
    esac
done

if [[ -z "$DEVICE" ]]; then
    echo "Error: No device specified (use -/dev/sdX)"
    exit 1
fi

if $USE_TOBY; then
    echo "[--toby] Dumping $DEVICE → output.img"
    sudo dd if="$DEVICE" of=output.img bs=4M status=progress
fi

if [[ -n "$BOARD" ]]; then
    ZIP="shimboot_${BOARD}.zip"
    BIN="shimboot_${BOARD}.bin"

    if [[ -f "$ZIP" ]]; then
        echo "[---$BOARD] Found $ZIP, extracting..."
        unzip -o "$ZIP"
        if [[ -f "$BIN" ]]; then
            echo "[---$BOARD] Writing $BIN → $DEVICE"
            sudo dd if="$BIN" of="$DEVICE" bs=4M status=progress
        else
            echo "Error: $BIN not found after extraction."
            exit 1
        fi
    else
        echo "Error: $ZIP not found in current directory."
        exit 1
    fi
fi
